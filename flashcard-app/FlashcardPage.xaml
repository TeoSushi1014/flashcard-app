<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="flashcard_app.FlashcardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:flashcard_app"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid x:Name="RootGrid" Padding="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" 
                    Spacing="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <Border x:Name="FlashcardCard"
                    Width="500"
                    MinHeight="300"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="32"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                
                <StackPanel Spacing="16" VerticalAlignment="Center">
                    <TextBlock x:Name="CurrentCardLabel"
                               Text="Thẻ từ vựng hiện tại"
                               FontSize="14"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                    
                    <TextBlock x:Name="CurrentCardText"
                               Text="Chưa có thẻ"
                               FontSize="28"
                               FontWeight="SemiBold"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                    
                    <TextBlock x:Name="CardIndexText"
                               Text="Vị trí: -/-"
                               FontSize="12"
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Navigation Buttons -->
            <StackPanel Orientation="Horizontal" 
                        Spacing="12"
                        HorizontalAlignment="Center">
                <Button x:Name="PreviousButton"
                        Width="120"
                        Click="Previous_Click"
                        Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE70B;"/>
                        <TextBlock x:Name="PreviousButtonText" Text="Trước"/>
                    </StackPanel>
                </Button>
                <Button x:Name="NextButton"
                        Width="120"
                        Click="Next_Click"
                        Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock x:Name="NextButtonText" Text="Sau"/>
                        <FontIcon Glyph="&#xE70A;"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <InfoBar x:Name="StatusBar"
                     IsOpen="False"
                     Severity="Informational"
                     Message="Sẵn sàng"/>
        </StackPanel>

        <ScrollViewer Grid.Column="1">
            <StackPanel Spacing="16" Padding="16">

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;" FontSize="16"/>
                            <TextBlock x:Name="AddCardSectionLabel"
                                       Text="Thêm thẻ mới"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <TextBox x:Name="NewCardInput"
                                 PlaceholderText="Nhập từ vựng..."
                                 MaxLength="100"/>
                        
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button x:Name="AddToEndButton"
                                    Content="Thêm cuối"
                                    Click="AddToEnd_Click"
                                    Style="{StaticResource AccentButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Width="120"/>
                            <Button x:Name="AddToStartButton"
                                    Content="Thêm đầu"
                                    Click="AddToStart_Click"
                                    Width="120"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="#C42B1C"/>
                            <TextBlock x:Name="DeleteCardSectionLabel"
                                       Text="Xóa thẻ"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <TextBox x:Name="DeleteCardInput"
                                 PlaceholderText="Nhập từ cần xóa..."/>
                        
                        <Button x:Name="DeleteButton"
                                Content="Xóa"
                                Click="Delete_Click"
                                HorizontalAlignment="Stretch"
                                Background="#C42B1C"
                                Foreground="White"/>
                        
                        <Button x:Name="DeleteCurrentButton"
                                Content="Xóa thẻ hiện tại"
                                Click="DeleteCurrent_Click"
                                HorizontalAlignment="Stretch"
                                Background="#E65100"
                                Foreground="White"/>
                    </StackPanel>
                </Border>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE70F;" FontSize="16" Foreground="#0078D4"/>
                            <TextBlock x:Name="EditCardSectionLabel"
                                       Text="Sửa thẻ"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <TextBox x:Name="EditCardInput"
                                 PlaceholderText="Nhập nội dung mới..."
                                 MaxLength="100"/>
                        
                        <Button x:Name="EditButton"
                                Content="Sửa"
                                Click="Edit_Click"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource AccentButtonStyle}"/>
                    </StackPanel>
                </Border>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE721;" FontSize="16"/>
                            <TextBlock x:Name="FindCardSectionLabel"
                                       Text="Tìm thẻ"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <NumberBox x:Name="FindIndexInput"
                                   PlaceholderText="Nhập vị trí (0,1,2...)"
                                   Minimum="0"
                                   SpinButtonPlacementMode="Compact"/>
                        
                        <Button x:Name="FindButton"
                                Content="Tìm"
                                Click="Find_Click"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8FD;" FontSize="16"/>
                            <TextBlock x:Name="TraverseSectionLabel"
                                       Text="Duyệt danh sách"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <Button x:Name="TraverseForwardButton"
                                Click="TraverseForward_Click"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock x:Name="TraverseForwardButtonText" Text="Duyệt xuôi"/>
                                <FontIcon Glyph="&#xE70A;"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="TraverseBackwardButton"
                                Click="TraverseBackward_Click"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE70B;"/>
                                <TextBlock x:Name="TraverseBackwardButtonText" Text="Duyệt ngược"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8FD;" FontSize="16"/>
                            <TextBlock x:Name="ListSectionLabel"
                                       Text="Danh sách thẻ"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <TextBlock x:Name="ListDisplay"
                                   Text="Danh sách trống"
                                   TextWrapping="Wrap"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,16,0,0"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE7A7;" FontSize="16" Foreground="#0078D4"/>
                            <TextBlock x:Name="PerformanceTestSectionLabel"
                                       Text="Performance Test"
                                       FontWeight="SemiBold"
                                       FontSize="16"/>
                        </StackPanel>
                        
                        <TextBlock x:Name="PerformanceTestDescription"
                                   Text="Test hiệu năng với các kích thước khác nhau"
                                   FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap"/>
                        
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Button x:Name="Test10Button"
                                    Grid.Row="0" Grid.Column="0"
                                    Content="Test 10"
                                    Click="Test10_Click"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Margin="0,0,0,8"/>
                            
                            <Button x:Name="Test100Button"
                                    Grid.Row="0" Grid.Column="1"
                                    Content="Test 100"
                                    Click="Test100_Click"
                                    Margin="0,0,0,8"/>
                            
                            <Button x:Name="Test1000Button"
                                    Grid.Row="1" Grid.Column="0"
                                    Content="Test 1,000"
                                    Click="Test1000_Click"
                                    Margin="0,0,0,8"/>
                            
                            <Button x:Name="Test10000Button"
                                    Grid.Row="1" Grid.Column="1"
                                    Content="Test 10,000"
                                    Click="Test10000_Click"
                                    Margin="0,0,0,8"/>
                        </Grid>
                        
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="4"
                                Padding="12"
                                Margin="0,8,0,0"
                                BorderThickness="1"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="TestResultText"
                                           Text="Chưa có kết quả test. Click nút test để bắt đầu."
                                           TextWrapping="Wrap"
                                           FontFamily="Consolas"
                                           FontSize="13"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </ScrollViewer>
                        </Border>
                        
                        <Button x:Name="CopyResultsButton"
                                Content="Copy"
                                Click="CopyResults_Click"
                                HorizontalAlignment="Stretch"
                                Margin="0,8,0,0"
                                Style="{StaticResource AccentButtonStyle}"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

